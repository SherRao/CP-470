<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listItemsLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    tools:context=".ListItemsActivity">

    <RadioButton
        android:id="@+id/listItemsRadioButton"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:gravity="fill" />

    <CheckBox
        android:id="@+id/listItemsCheckbox"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:gravity="fill" />

    <Switch
        android:id="@+id/listItemsSwitch"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:gravity="fill"
        android:text="@string/SwitchText"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/listItemsImageButton"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:contentDescription="@string/ImageHint"
        android:gravity="fill"
        android:src="@android:drawable/ic_menu_camera" />

</GridLayout>